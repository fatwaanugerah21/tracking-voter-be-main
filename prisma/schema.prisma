// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  OWNER
  ADMIN
  TPS_COORDINATOR
  TPS_PR
}

enum ElectorStatus {
  WILLINGLY
  NEED_MONEY
  NOT_GONNA_VOTE
}

model User {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  phoneNumber String
  password    String
  role        UserRole

  votingPlacePr VPPR[]
  coordinator   Coordinator[]

  createdAt DateTime  @default(now())
  updatedAt DateTime?
}

model Subdistrict {
  id    Int    @id @default(autoincrement())
  name  String @unique
  wards Ward[]

  createdAt DateTime  @default(now())
  updatedAt DateTime?
}

model Ward {
  id            Int           @id @default(autoincrement())
  name          String        @unique
  subdistrictId Int
  subdistrict   Subdistrict   @relation(fields: [subdistrictId], references: [id])
  votingPlaces  VotingPlace[]

  createdAt DateTime  @default(now())
  updatedAt DateTime?
}

model Coordinator {
  id           Int           @id @default(autoincrement())
  userId       Int
  user         User          @relation(fields: [userId], references: [id])
  votingPlaces VotingPlace[]
  vpprs        VPPR[]

  createdAt DateTime  @default(now())
  updatedAt DateTime?
}

model VotingPlace {
  id            Int         @id @default(autoincrement())
  name          String      @unique
  address       String
  wardId        Int
  ward          Ward        @relation(fields: [wardId], references: [id])
  coordinatorId Int
  coordinator   Coordinator @relation(fields: [coordinatorId], references: [id])
  electors      Elector[]
  vpprs         VPPR[]

  createdAt DateTime  @default(now())
  updatedAt DateTime?
}

model Elector {
  id            Int           @id @default(autoincrement())
  name          String
  nik           String        @unique
  address       String
  description   String
  phoneNumber   String
  status        ElectorStatus
  bribeAmt      Int?
  choiceName    String?
  votingPlaceId Int
  votingPlace   VotingPlace   @relation(fields: [votingPlaceId], references: [id])

  createdAt DateTime  @default(now())
  updatedAt DateTime?
}

model VPPR {
  id Int @id @default(autoincrement())

  userId Int
  user   User @relation(fields: [userId], references: [id])

  coordinatorId Int
  coordinator   Coordinator @relation(fields: [coordinatorId], references: [id])

  votingPlaceId Int
  votingPlace   VotingPlace @relation(fields: [votingPlaceId], references: [id])

  createdAt DateTime  @default(now())
  updatedAt DateTime?
}
